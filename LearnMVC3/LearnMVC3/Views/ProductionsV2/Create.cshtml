@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <fieldset>
        
        <legend>ProductionsV2</legend>

        <div class="editor-label">Title</div>
        <div class="editor-field">@Html.TextBox("Title")</div>

        <div class="editor-label">Description</div>
        <div class="editor-field">@Html.TextArea("Description")</div>
        
        <div class="editor-label">Price</div>
        <div class="editor-field">@Html.TextBox("Price")</div>

        <div class="editor-label">Old Price</div>
        <div class="editor-field">@Html.TextBox("OldPrice")</div>

            <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
