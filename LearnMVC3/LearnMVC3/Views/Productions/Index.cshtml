@model IEnumerable<LearnMVC3.Model.Production>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            OldPrice
        </th>
        <th>
            Episodes
        </th>
    </tr>
    


    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.Title
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@String.Format("{0:F}", item.Price)
        </td>
        <td>
			@String.Format("{0:F}", item.OldPrice)
        </td>
        <td>
			@(item.Episodes == null ? "None" : item.Episodes.Count.ToString())
        </td>
    </tr>
}

</table>


